                <div class="tab-pane fade active show" id="board">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Title</th>
                                <th>User</th>
                                <th>Date</th>
                                <th>Views</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i = postupload.length - 1; i >= 0; i--) { %>
