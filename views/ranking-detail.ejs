<!DOCTYPE html>
<html lang="zxx">

    <%- include('layouts/header'); -%>


<body>

    <%- include('layouts/bar'); -%>
    
        <!-- Breadcrumb Begin -->
        <div class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__links">
                            <a href="/"><i class="fa fa-home"></i> Home </a>
                            <span>Ranking</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb End -->

            <!-- Product Section Begin -->
            <section class="ranking-detail spad">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="trending__product">
                                <div class="row">
                                    <div class="col-lg-8 col-md-8 col-sm-8">
                                        <div class="section-title">
                                            <h4>Ranking</h4>
                                        </div>
                                    </div>
                                </div>
                                <div id="myTabContent" class="tab-content">
                                    <div class="tab-pane fade active show" id="ranking">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>No</th>
                                                    <th>User</th>
                                                    <th>Date</th>
                                                    <th>Score</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (var i = 0; i < rank.length; i++) { %>
                                                    <tr>
                                                        <td><%= i+1 %></td>
                                                        <td style="text-align:center"><%= rank[i].name %></td>
                                                        <td><%= rank[i].datePosted.toDateString() %></td>
                                                        <td><%= rank[i].point %></td>                        
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            <div class="product__pagination">
                                <a href="#" class="current-page">1</a>
                                <a href="#">2</a>
                                <a href="#">3</a>
                                <a href="#">4</a>
                                <a href="#">5</a>
                                <a href="#"><i class="fa fa-angle-double-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Product Section End -->

    <%- include('layouts/footer'); -%>
    <%- include('layouts/scripts'); -%>

</body>

</html>